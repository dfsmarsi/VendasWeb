@model VendasWeb.Models.Vendedor

@{ 
    ViewData["Title"] = "Excluir Vendedor";
}

<h2>@ViewData["Title"]</h2>

<h3>Realmente deseja exlcuir o vendedor?</h3>
<div>
    <h4>Vendedor</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>
        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <dt>@Html.DisplayNameFor(model => model.DataAniversario)</dt>
        <dd>@Html.DisplayFor(model => model.DataAniversario)</dd>
        <dt>@Html.DisplayNameFor(model => model.SalarioBase)</dt>
        <dd>@Html.DisplayFor(model => model.SalarioBase)</dd>
    </dl>

    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <button asp-action="Index" class="btn btn-default">Voltar a listagem</button>
    </form>
</div>