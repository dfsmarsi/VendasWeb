@model IEnumerable<VendasWeb.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CadastrarVendedor" class="btn btn-default">Cadastrar</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a class="glyphicon glyphicon-edit" asp-action="Edit" asp-route-id="@item.Id"></a>
                    <span> | </span>
                    <a class="glyphicon glyphicon-copy" asp-action="Detalhes" asp-route-id="@item.Id"></a>
                    <span> | </span>
                    <a class="glyphicon glyphicon-trash" asp-action="Excluir" asp-route-id="@item.Id"></a>
                </td>
            </tr>
         }
    </tbody>
</table>
